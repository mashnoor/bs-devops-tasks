node {
    def app

    stage('Clone repository') {
      
        checkout scm
    }

    stage('Build image') {
  
       steps {
                dir('task1/app1/build/Dockerfile'){
                    script{
                        app = docker.build("mashnoor/bc-app1")
                    }
                }
            }
    }

    stage('Push image') {
        
        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
}