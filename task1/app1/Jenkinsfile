node {
    def app

    stage('Clone repository') {
      
        checkout scm
    }

    stage('Build image') {
  
       app = docker.build("mashnoor/doraemon", "-f ./task1/app1/build/Dockerfile ")
    }

    stage('Push image') {
        
        
        docker.withRegistry('', 'dockerhub') {
            app.push("${env.BUILD_NUMBER}")
        app.push("latest")
            
        }
    }
}